{
  "name": "@chaoschain/gateway",
  "version": "0.1.0",
  "description": "ChaosChain Gateway - Workflow orchestration and off-chain services",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "vitest run",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --config vitest.e2e.config.ts",
    "e2e:up": "docker compose -f ../../docker-compose.e2e.yml up -d",
    "e2e:setup": "NODE_PATH=$(pwd)/node_modules npx tsx ../../e2e/setup.ts",
    "e2e:down": "docker compose -f ../../docker-compose.e2e.yml down",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "smoke-test": "tsx scripts/smoke-test.ts"
  },
  "dependencies": {
    "@ardrive/turbo-sdk": "^1.41.0",
    "@xmtp/node-sdk": "^5.3.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
